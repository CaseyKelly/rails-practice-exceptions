<%= form_for(@user, html: {:class => "form-horizontal"}) do |f| %>

  <% if @user.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

<div class="form-group">
  <div class="field">
    <%= f.label :username, :class => 'control-label col-md-2' %>

    <div class='form-controls col-md-4'>
      <%= f.text_field :username, :class => 'form-control' %>
    </div>
  </div>
</div>


<div class="form-group">
   <div class="field">
     <%= f.label :password, :class => 'control-label col-md-2' %>

     <div class='form-controls col-md-4'>
       <%= f.password_field :password, :class => 'form-control' %>
     </div>
   </div>
 </div>

 <div class="form-group">
   <div class="field">
     <%= f.label :password_confirmation, :class => 'control-label col-md-2' %>

     <div class='form-controls col-md-4'>
       <%= f.password_field :password_confirmation, :class => 'form-control' %>
     </div>
   </div>
 </div>

<div class="form-group">
  <div class="col-md-offset-2 col-md-4">
    <%= f.submit @submit_name, :class => 'btn btn-primary'%>
  </div>
</div>



<% end %>
